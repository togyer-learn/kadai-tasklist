<% if logged_in? %>
  <p>ログイン完了ユーザー： <%= current_user.name %></p>

  <h1>タスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> ｜ <%= task.status %></li>
    <% end %>
  </ul>
  <%= paginate @tasks %>
  
  <%= link_to 'タスクの追加', new_task_path %>
  <%= link_to 'Logout', logout_path, method: :delete %>
<% else %>
  <h1>Welcome to the Tasklist</h1>
  <%= link_to 'Sign up now!', signup_path %>
  <%= link_to 'User Login', login_path %>
<% end %>